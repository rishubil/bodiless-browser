{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bodiless Browser",
  "version": "1.0.0",
  "identifier": "com.bodiless.browser",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Bodiless Browser",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "dmg", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Nesswit",
    "copyright": "Copyright Â© 2025 Nesswit. All rights reserved.",
    "category": "Utility",
    "shortDescription": "If there's a Headless Browser, shouldn't someone make a Bodiless Browser too?",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
